<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".dataTable"
    android:layout_margin="50dp">
<TableLayout
    android:padding="0dp"
    android:stretchColumns="*"
    android:background="#008477"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">
    <TableRow
        android:gravity="center_vertical"
        android:layout_weight = "1" >
        <TextView
            android:gravity="center_vertical"
            android:text="총 시간"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/total"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="00:00:00"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>
    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="요일"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="시간(시:분:초)"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>
    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Mon."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/mon"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Tue."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/tue"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Wed."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/wed"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Thu."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/thu"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Fri."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/fri"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Sat."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/sat"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

    <TableRow
        android:layout_weight = "1"
        android:gravity="center_vertical">
        <TextView
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="Sun."
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/sun"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:background="#ffffff"/>
    </TableRow>

</TableLayout>
</LinearLayout>